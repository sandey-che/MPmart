# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
PGDATABASE=database_name
PGHOST=database_host
PGPASSWORD=database_password
PGPORT=5432
PGUSER=database_username

# Application Configuration
PORT=5000
NODE_ENV=development

# Session Management (Required for authentication)
SESSION_SECRET=your_session_secret_here

# Replit Authentication & Identity (Required for OAuth)
REPL_ID=your_repl_id
REPL_IDENTITY_KEY=your_identity_key
REPL_IDENTITY=your_identity_token
REPLIT_USERID=your_user_id
REPLIT_USER=your_username

# Replit Platform Variables (Optional for local development)
REPLIT_DEV_DOMAIN=your_dev_domain
REPLIT_DOMAINS=your_domains
REPLIT_DB_URL=your_replit_db_url

# Development Environment
REPL_LANGUAGE=nix
REPLIT_ENVIRONMENT=production

# AI Integration (Optional - if using OpenAI features)
# OPENAI_API_KEY=your_openai_api_key_here